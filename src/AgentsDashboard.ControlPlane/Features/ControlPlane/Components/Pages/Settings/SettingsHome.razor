@page "/settings"
@layout SettingsLayout
@rendermode InteractiveServer

@namespace AgentsDashboard.ControlPlane.Components.Pages
<PageTitle>Settings - AgentsDashboard</PageTitle>

<MudStack Spacing="3" Class="settings-home">
    <div>
        <MudText Typo="Typo.h4">Settings</MudText>
        <MudText Typo="Typo.body2" Class="settings-home-subtitle">All operational pages are organized here. Pick by intent, not by guesswork.</MudText>
    </div>

    <MudGrid>
        <MudItem xs="12" md="6" lg="3">
            <MudPaper Class="settings-home-card" Elevation="0">
                <MudText Typo="Typo.subtitle1">Core</MudText>
                <MudList T="string" Dense="true">
                    <MudListItem>
                        <MudLink Href="/settings/repositories" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.Folder" Class="mr-2" />
                            <span data-testid="settings-home-repositories">Repositories</span> <span class="settings-home-link-detail">Connect repos, branches, and tokens.</span>
                        </MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="/settings/runs" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.PlayCircle" Class="mr-2" />
                            <span data-testid="settings-home-runs">Runs</span> <span class="settings-home-link-detail">Inspect execution history and outcomes.</span>
                        </MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="/settings/findings" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.FactCheck" Class="mr-2" />
                            <span data-testid="settings-home-findings">Findings</span> <span class="settings-home-link-detail">Review and triage discovered issues.</span>
                        </MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="/settings/skills" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.Bolt" Class="mr-2" />
                            <span data-testid="settings-home-skills">Skills</span> <span class="settings-home-link-detail">Manage reusable slash prompt skills.</span>
                        </MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="/settings/alerts" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.Notifications" Class="mr-2" />
                            <span data-testid="settings-home-alerts">Alerts</span> <span class="settings-home-link-detail">Define alerting rules and webhooks.</span>
                        </MudLink>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6" lg="3">
            <MudPaper Class="settings-home-card" Elevation="0">
                <MudText Typo="Typo.subtitle1">Infrastructure</MudText>
                <MudList T="string" Dense="true">
                    <MudListItem>
                        <MudLink Href="/settings/image-builder" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.Build" Class="mr-2" />
                            <span data-testid="settings-home-image-builder">Image Builder</span> <span class="settings-home-link-detail">Build and maintain runtime images.</span>
                        </MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="/settings/mcp" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.Extension" Class="mr-2" />
                            <span data-testid="settings-home-mcp">MCP</span> <span class="settings-home-link-detail">Catalog, edit, and validate MCP config.</span>
                        </MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="/settings/task-runtimes" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.Memory" Class="mr-2" />
                            <span data-testid="settings-home-task-runtimes">Orchestrator</span> <span class="settings-home-link-detail">Tune capacity, reliability, and cleanup.</span>
                        </MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="/settings/sounds" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.VolumeUp" Class="mr-2" />
                            <span data-testid="settings-home-sounds">Sounds</span> <span class="settings-home-link-detail">Control run completion audio behavior.</span>
                        </MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="/settings/system" Class="settings-home-link">
                            <MudIcon Icon="@Icons.Material.Filled.Settings" Class="mr-2" />
                            <span data-testid="settings-home-system">System</span> <span class="settings-home-link-detail">Global defaults for retention and observability.</span>
                        </MudLink>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudStack>
