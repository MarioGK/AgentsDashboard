@inherits LayoutComponentBase
@layout MainLayout

<div class="settings-shell">
    <MudPaper Class="settings-nav-panel" Elevation="0" Square="true">
        <MudText Typo="Typo.subtitle2" Class="settings-nav-title">Settings</MudText>
        <MudNavMenu Dense="true" Class="settings-nav-menu">
            <MudNavGroup Title="Core" Icon="@Icons.Material.Filled.Dashboard" Expanded="true">
                <MudNavLink Href="/settings/repositories" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Folder"><span data-testid="settings-nav-repositories-link">Repositories</span></MudNavLink>
                <MudNavLink Href="/settings/runs" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.PlayCircle"><span data-testid="settings-nav-runs-link">Runs</span></MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Platform" Icon="@Icons.Material.Filled.SettingsApplications" Expanded="true">
                <MudNavLink Href="/settings/ai" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Psychology"><span data-testid="settings-nav-ai-link">AI</span></MudNavLink>
                <MudNavLink Href="/settings/skills" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Bolt"><span data-testid="settings-nav-skills-link">Skills</span></MudNavLink>
                <MudNavLink Href="/settings/sounds" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.VolumeUp"><span data-testid="settings-nav-sounds-link">Sounds</span></MudNavLink>
                <MudNavLink Href="/settings/alerts" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Notifications"><span data-testid="settings-nav-alerts-link">Alerts</span></MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Infrastructure" Icon="@Icons.Material.Filled.Dns" Expanded="true">
                <MudNavLink Href="/settings/image-builder" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Build"><span data-testid="settings-nav-image-builder-link">Image Builder</span></MudNavLink>
                <MudNavLink Href="/settings/mcp" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Extension"><span data-testid="settings-nav-mcp-link">MCP</span></MudNavLink>
                <MudNavLink Href="/settings/task-runtimes" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Memory"><span data-testid="settings-nav-task-runtimes-link">Orchestrator</span></MudNavLink>
                <MudNavLink Href="/settings/system" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Settings"><span data-testid="settings-nav-system-link">System</span></MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudPaper>

    <section class="settings-content-panel">
        @Body
    </section>
</div>
