@page "/settings/projects/{ProjectId}"
@layout SettingsLayout
@rendermode InteractiveServer
@inject NavigationManager Nav

<PageTitle>Repository Settings</PageTitle>

<MudAlert Severity="Severity.Info">Projects were removed. Redirecting to repositories...</MudAlert>

@code {
    [Parameter] public string ProjectId { get; set; } = string.Empty;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            Nav.NavigateTo("/settings/projects", replace: true);
        }
    }
}
