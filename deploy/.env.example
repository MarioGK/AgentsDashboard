# =============================================================================
# AI Orchestrator - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Harness API Keys (required for task execution)
# -----------------------------------------------------------------------------
# OpenAI/Codex API key for Codex harness
CODEX_API_KEY=your-codex-api-key-here

# OpenCode API key for OpenCode harness
OPENCODE_API_KEY=your-opencode-api-key-here

# Anthropic API key for Claude Code harness
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Z.ai API key for Zai/GLM-5 harness
Z_AI_API_KEY=your-zai-api-key-here

# -----------------------------------------------------------------------------
# GitHub Integration
# -----------------------------------------------------------------------------
# GitHub Personal Access Token for repository operations
# Required scopes: repo, read:org
GITHUB_TOKEN=your-github-token-here

# -----------------------------------------------------------------------------
# SQLite Configuration
# -----------------------------------------------------------------------------
# SQLite connection string for control plane persistence
ORCHESTRATOR_SQLITE_CONNECTION_STRING=Data Source=/data/orchestrator.db

# -----------------------------------------------------------------------------
# Control Plane Configuration
# -----------------------------------------------------------------------------
# Control Plane base URL (for external access)
CONTROL_PLANE_URL=http://localhost:8080

# Worker Gateway gRPC address
WORKER_GRPC_ADDRESS=http://worker-gateway:5201

# -----------------------------------------------------------------------------
# Observability (VictoriaMetrics)
# -----------------------------------------------------------------------------
# VictoriaMetrics endpoint for OpenTelemetry metrics
OTEL_EXPORTER_OTLP_ENDPOINT=http://victoria-metrics:8428

# VMUI backend URL (for metrics visualization)
VMUI_BACKEND_URL=http://victoria-metrics:8428

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
# Enable Docker-based harness execution
WORKER_USE_DOCKER=true

# Default harness image (all-in-one)
WORKER_DEFAULT_IMAGE=ghcr.io/mariogk/ai-harness:latest

# Individual harness images
WORKER_HARNESS_IMAGE_CODEX=ghcr.io/mariogk/harness-codex:latest
WORKER_HARNESS_IMAGE_OPENCODE=ghcr.io/mariogk/harness-opencode:latest
WORKER_HARNESS_IMAGE_CLAUDE_CODE=ghcr.io/mariogk/harness-claudecode:latest
WORKER_HARNESS_IMAGE_ZAI=ghcr.io/mariogk/harness-zai:latest

# -----------------------------------------------------------------------------
# Optional Settings
# -----------------------------------------------------------------------------
# Log level (Debug, Information, Warning, Error)
LOG_LEVEL=Information

# ASP.NET Core environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Production

# Run retention days (for TTL cleanup)
RUN_RETENTION_DAYS=90

# Log retention days (for TTL cleanup)
LOG_RETENTION_DAYS=30
